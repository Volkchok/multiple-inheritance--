<Window x:Class="WpfApp1.MainWindow"   
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"   
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
        Title="Приложение 'Двигатели'" Height="750" Width="700">

    <Grid>
        <TabControl Margin="0,0,0,-3">
            <TabItem Header="Турбированный двигатель">
                <Grid>
                    <!-- Фоновое изображение -->
                    <Image Source="Tdvs.jpg" Stretch="UniformToFill" Margin="485,10,0,559"/>

                    <StackPanel>
                        <Label Content="Турбированный двигатель:"  FontWeight="Bold" FontSize="14" Margin="10"/>
                        <Label Content="Лошадиные силы:" />
                        <TextBox x:Name="txtTurboHorsepower" Width="200"/>
                        <Label Content="Вес:"/>
                        <TextBox x:Name="txtTurboWeight" Width="200"/>
                        <Label Content="Цена:"/>
                        <TextBox x:Name="txtTurboPrice" Width="200"/>
                        <Label Content="Давление:" />
                        <TextBox x:Name="txtTurboPressure" Width="200"/>
                        <Button Content="Добавить Турбированный двигатель" Click="btnAddTurboEngine_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Двигатель внутреннего сгорания">
                <Grid>
                    <!-- Фоновое изображение -->
                    <Image Source="dvs.jpg" Stretch="UniformToFill" Margin="485,10,0,559"/>

                    <StackPanel>
                        <Label Content="Двигатель внутреннего сгорания:" FontWeight="Bold" FontSize="14" Margin="10"/>
                        <Label Content="Лошадиные силы:"/>
                        <TextBox x:Name="txtICEHorsepower" Width="200"/>
                        <Label Content="Вес:"/>
                        <TextBox x:Name="txtICEWeight" Width="200"/>
                        <Label Content="Цена:"/>
                        <TextBox x:Name="txtICEPrice" Width="200"/>
                        <Label Content="Объём:"/>
                        <TextBox x:Name="txtICEVolume" Width="200"/>
                        <Button Content="Добавить Двигатель внутреннего сгорания" Click="btnAddICE_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Реактивный двигатель">
                <Grid>
                    <!-- Фоновое изображение -->
                    <Image Source="jet.jpg" Stretch="UniformToFill" Margin="485,10,0,559"/>
                    <StackPanel>
                        <Label Content="Реактивный двигатель:"  FontWeight="Bold" FontSize="14" Margin="10"/>
                        <Label Content="Лошадиные силы:" />
                        <TextBox x:Name="txtJetHorsepower" Width="200"/>
                        <Label Content="Вес:"/>
                        <TextBox x:Name="txtJetWeight" Width="200"/>
                        <Label Content="Цена:"/>
                        <TextBox x:Name="txtJetPrice" Width="200"/>

                        <Label Content="Объём:"/>
                        <TextBox x:Name="txtJetVolume" Width="200"/>
                        <Label Content="Давление:"/>
                        <TextBox x:Name="txtJetPressure" Width="200"/>
                        <Button Content="Добавить Реактивный двигатель" Click="btnAddJetEngine_Click" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <ListBox x:Name="lstEngines" VerticalAlignment="Top" Margin="10,410,10,0" Height="300"/>

        <StackPanel VerticalAlignment="Top" Margin="10,340,10,0">
            <Button Content="Применить скидку" Click="btnApplyDiscount_Click" Height="30"/>
            <TextBox x:Name="txtDiscountPercentage" Width="200" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
